    local dest_addr:3;

    <move_loop>
    pack_bank_addr16(src_addr, src_bank, zext(XLow));
    pack_bank_addr16(dest_addr, dest_bank, zext(YLow));
    *:1 dest_addr = *:1 src_addr;

    XLow = XLow + 1;
