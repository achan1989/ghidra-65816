macro jsl_calculate_push_addr(_out) {
    local this_pc_full:3 = inst_start;
    local this_pbr:1 = this_pc_full(2);
    local this_pc:2 = this_pc_full:2;

    # "The address of the last instruction byte (the fourth instruction byte, or the third operand
    # byte), not the address of the next instruction."
    local push_addr:3 = (zext(this_pbr) << 16) | (zext(this_pc + 3));
    _out = push_addr;
}

# JSL native.
:JSL MemAbsLongJmp    is ctx_EF=0 & op=0x22; MemAbsLongJmp
{
    local push_addr:3; jsl_calculate_push_addr(push_addr);
    push24_native(push_addr);
    call MemAbsLongJmp;
}

# JSL emulation.
# Does not limit the top byte of the SP to 1 until the end of the instruction execution.
:JSL MemAbsLongJmp    is ctx_EF=1 & op=0x22; MemAbsLongJmp
{
    local push_addr:3; jsl_calculate_push_addr(push_addr);
    # "Although the high byte of the stack register is consistently forced to one, new 65816
    # opcodes executed in the emulation mode will not wrap the stack if the low byte over- or
    # underflowed in the middle of an instruction."
    push24_native(push_addr);
    SPHigh = 1;
    call MemAbsLongJmp;
}

